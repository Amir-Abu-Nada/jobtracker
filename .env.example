# ─── Application ──────────────────────────────────────────────────────────────
APP_NAME=JobTracker
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ─── Database ─────────────────────────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=jobtracker
DB_USERNAME=jobtracker
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# ─── Laravel Specific ─────────────────────────────────────────────────────────
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local
LOG_CHANNEL=stack
LOG_LEVEL=debug

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@jobtracker.com"
MAIL_FROM_NAME="${APP_NAME}"

# ─── Spring Boot Specific ─────────────────────────────────────────────────────
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/${DB_DATABASE}
SPRING_DATASOURCE_USERNAME=${DB_USERNAME}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}

# ─── Laravel Auth (JWT RS256) ─────────────────────────────────────────────────
# APP_KEY (above) is generated on first run: docker compose exec laravel-auth php artisan key:generate
JWT_TTL=900
JWT_KEY_ID=jobtracker-1
JWT_PRIVATE_KEY_PATH=storage/app/keys/private.pem
JWT_PUBLIC_KEY_PATH=storage/app/keys/public.pem
REFRESH_TOKEN_TTL=86400
REFRESH_TOKEN_REMEMBER_TTL=2592000
FRONTEND_URL=http://localhost

# ─── Frontend ─────────────────────────────────────────────────────────────────
VITE_API_URL=http://localhost/api

# ─── External Services (optional) ────────────────────────────────────────────
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
